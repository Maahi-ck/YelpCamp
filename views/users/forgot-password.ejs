<% layout('./layouts/boilerplate') %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <h4 class="text-center mb-4"><i class="bi bi-lock-fill"></i> Forgot Password</h4>

            <% if (step==='email' ) { %>
              <form method="POST" action="/Users/forgot">
                 <div class="mb-3">
                  <label for="username" class="form-label">Enter username</label>
                  <input type="text" class="form-control" id="username" name="username" required>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Enter your email</label>
                  <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send OTP</button>
              </form>
              <% } else if (step==='otp' ) { %>
                <form method="POST" action="/Users/verifyotp">
                  <div class="mb-3">
                    <label for="otp" class="form-label">Enter OTP sent to <strong>
                        <%= email %>
                      </strong></label>
                    <input type="text" class="form-control" id="otp" name="otp" required>
                  </div>
                  <button type="submit" class="btn btn-success w-100">Verify OTP</button>
                </form>
                <% } else if (step==='success' ) { %>


                    <form action="/Users/resetpassword" METHOD="POST">
                           <div class="mb-3">
            <label for="password" class="form-label"></label>
            <div class="input-group">
              <input type="password" class="form-control" id="password1" name="user[newpassword]"
                placeholder="Enter New password" required>
              <button class="btn btn-outline-secondary toggle-btn" type="button" data-target="password1">
                <i class="bi bi-eye-slash"></i>
              </button>
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label"></label>
            <div class="input-group">
              <input type="password" class="form-control" id="password2" name="user[confirmpassword]"
                placeholder="Confirm New password" required>
              <button class="btn btn-outline-secondary toggle-btn" type="button" data-target="password2">
                <i class="bi bi-eye-slash"></i>
              </button>
              <div class="input-group m-auto">
                  <button type="submit" class="btn btn-success">Submit</button>
              </div>
            
            </div>
          </div>
                    </form>
                  <% } else if (step==='error' ) { %>
                    <div class="alert alert-danger text-center">
                      ‚ùå Invalid OTP. Please try again.
                    </div>
                    <form method="POST" action="/Users/verify-otp">
                      <div class="mb-3">
                        <label for="otp" class="form-label">Enter OTP again</label>
                        <input type="text" class="form-control" id="otp" name="otp" required>
                      </div>
                      <button type="submit" class="btn btn-danger w-100">Retry</button>
                    </form>
                    <% } %>

          </div>
        </div>
      </div>
    </div>
  </div>