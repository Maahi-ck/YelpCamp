    <!-- Leave a Review -->
    <div class="container py-5 d-flex justify-content-center align-items-center">
        <div class="card shadow rounded-4 p-4" style="width: 100%; max-width: 500px;">
            <h4 class="mb-4 text-center text-primary">Leave a Review</h4>
            <form class="needs-validation" novalidate action="/campgrounds/<%= data._id %>/reviews" method="POST">
                <div class="mb-3">
                    <label for="rate" class="form-label">Add your rating (0 to 5)</label>
                    <input type="number" class="form-control" id="rate" name="Review[rating]" min="0" max="5"
                        required />
                    <div class="invalid-feedback">Please enter a rating between 0 and 5.</div>
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Review</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" name="Review[body]"
                        required></textarea>
                    <div class="invalid-feedback">Review can't be empty.</div>
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Submit Review</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="container py-5 d-flex justify-content-center align-items-center">
        <div class="card shadow rounded-4 p-4 w-100" style="max-width: 600px;">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <h2 class="mb-5 text-center text-primary border-bottom pb-3">User Reviews</h2>

                    <% if (data.reviews.length===0) { %>
                        <div class="alert alert-info text-center mb-4">
                            No reviews yet. Be the first to leave one!
                        </div>
                        <% } %>

                            <% for (let each of data.reviews) { %>
                                <div class="card mb-4 shadow-sm border border-light-subtle rounded-4">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5 class="card-title mb-0 text-warning">
                                                ‚≠ê <%= each.rating %> / 5
                                            </h5>

                                        </div>
                                        <p class="card-text text-secondary 6">
                                            <%= each.body %>
                                        </p>
                                        <p class="card-text text-secondary 6">
                                            <i class="bi bi-person-circle me-2 text-primary"></i>
                                            <a href="/Users/Profile/<%= each.author.username %>"
                                                class="text-decoration-none fw-semibold text-dark">
                                                <%= each.author.username %>
                                            </a>
                                        </p>

                                        <% if ((req.session.user && each.author && req.session.user.username===each.author.username)) { %>
                                            <form
                                                action="/campgrounds/<%= data._id %>/reviews/<%= each._id %>?_method=DELETE"
                                                method="POST">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
                </div>
            </div>
        </div>
    </div>

   